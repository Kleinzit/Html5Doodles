    "version": "0.1.0",
    "tasks": [
        {
            "taskName" : "hello",
            "command": "echo",
            "isShellCommand": true,
            "args": [
                "Hello World"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "chrome",
            "command": "explorer",
            "isBuildCommand": true,
            "windows": {
                "command": "explorer.exe"
            },
            "args": ["${file}"]
        }
    ]
}